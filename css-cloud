/* ───────────── Clouds ───────────── */
.cloud {
  position: absolute;
  width: 60px;           /* scale cloud size here */
  aspect-ratio: 2 / 1;   /* simple oval */
  background: #c8d8e8;   /* light blue */
  border-radius: 50%;
  filter: blur(1px);
  opacity: 0.75;
}

.cloud::after, .cloud::before {          /* little puffs */
  content: "";
  position: absolute;
  background: inherit;
  border-radius: 50%;
}

.cloud::before {
  width: 70%; height: 70%;
  top: -35%; left: 10%;
}
.cloud::after {
  width: 55%; height: 55%;
  top: -15%; right: 8%;
}

/* Cloud paths */
.cloud1 { top: 15%; left: 0; animation: drift1 16s ease-in-out infinite; }
.cloud2 { top: 50%; right: -10%; animation: drift2 22s ease-in-out infinite; }

@keyframes drift1 {   /* left ⇄ right */
  0%, 100% { transform: translateX(0); }
  50%      { transform: translateX(40px); }
}
@keyframes drift2 {   /* right ⇄ left (longer path) */
  0%, 100% { transform: translateX(0); }
  50%      { transform: translateX(-60px); }
}

/* ───────────── Stopwatch ───────────── */
.stopwatch {
  position: relative;
  width: 100%;
  height: 100%;
}

/* dial (static) */
.dial {
  position: relative;
  width: 100%;
  height: 100%;
}

/* hand (rotating; pivot at bottom‑centre / “bulk” end) */
.hand {
  position: absolute;
  inset: 0;
  transform-origin: 50% 100%;
  animation: sweep 2s linear infinite;
}

@keyframes sweep {
  from { transform: rotate(0deg); }
  to   { transform: rotate(360deg); }
}

/* ───────────── Caption ───────────── */
.caption {
