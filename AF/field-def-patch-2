private createRow(
  meta: MetaObj,
  existing: ExistingUserObj | null
): FormGroup {

  const initial = {
    system_field_name: existing?.system_field_name ?? null,
    form_field: existing?.form_field ?? null,
    field_category: existing?.field_category ?? null,
    field_requirement: existing?.field_requirement ?? null,
    dependent_field: existing?.dependent_field ?? null,
    field_default_value: existing?.field_default_value ?? null,
    field_editable: existing?.field_editable ?? true,
    field_validation_rule_exists: existing?.field_validation_rule_exists ?? false,
    field_derivation_rule_exists: existing?.field_derivation_rule_exists ?? false,
    field_allowed_values: existing?.field_allowed_values ?? null,
    field_standard_values: existing?.field_standard_values ?? null,
    field_position_in_template: existing?.field_position_in_template ?? null
  };

  // ✅ STEP 1: Create form group WITHOUT cross validators
  const fg = this.fb.group({

    // ---- readonly meta ----
    table_name: [{ value: meta.table_name, disabled: true }],
    column_name: [{ value: meta.column_name, disabled: true }],
    ordinal_position: [{ value: meta.ordinal_position, disabled: true }],
    is_nullable: [{ value: meta.is_nullable, disabled: true }],
    data_type: [{ value: meta.data_type, disabled: true }],
    character_maximum_length: [{ value: meta.character_maximum_length, disabled: true }],
    numeric_precision: [{ value: meta.numeric_precision, disabled: true }],
    numeric_scale: [{ value: meta.numeric_scale, disabled: true }],

    // ---- user inputs ----
    system_field_name: new FormControl(initial.system_field_name, {
      validators: [
        Validators.required,
        Validators.minLength(5),
        Validators.maxLength(50),
        Validators.pattern(/^[a-z_]+$/)
      ],
      nonNullable: false
    }),

    form_field: new FormControl(initial.form_field, Validators.required),
    field_category: new FormControl(initial.field_category, Validators.required),
    field_requirement: new FormControl(initial.field_requirement),
    dependent_field: new FormControl(initial.dependent_field),

    field_default_value: new FormControl(initial.field_default_value),
    field_editable: new FormControl(initial.field_editable),

    field_validation_rule_exists: new FormControl(
      initial.field_validation_rule_exists,
      Validators.required
    ),

    field_derivation_rule_exists: new FormControl(
      initial.field_derivation_rule_exists,
      Validators.required
    ),

    field_allowed_values: new FormControl(initial.field_allowed_values),
    field_standard_values: new FormControl(initial.field_standard_values),

    field_position_in_template: new FormControl(
      initial.field_position_in_template,
      Validators.required
    )
  });

  // ✅ STEP 2: Attach validators that need fg / rows
  fg.get('system_field_name')?.addValidators(
    this.uniqueUiFieldValidator(() => this.rows, () => fg)
  );

  fg.get('field_default_value')?.addValidators(
    this.defaultValueValidator(() => fg)
  );

  fg.get('field_standard_values')?.addValidators(
    this.standardValuesValidator()
  );

  // ✅ STEP 3: Recalculate
  fg.updateValueAndValidity({ emitEvent: false });

  return fg;
}
