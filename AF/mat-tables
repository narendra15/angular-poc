// key-mapping.mock.ts
export const KEY_MAPPING_DATA = [
  {
    targetTable: 'bcl_cv',
    sourceTable: 'bcl_rfdh',
    targetKey: 'cl_cd',
    sourceKey: 'rfdh_cd',
  },
  {
    targetTable: 'bcl_cv',
    sourceTable: 'bcl_rfdh',
    targetKey: 'grp_cl_id',
    sourceKey: 'rfdh_id',
  },
];


 displayedColumns = [
    'targetTable',
    'sourceTable',
    'targetKey',
    'sourceKey',
  ];

  dataSource: any[] = [];

  loadKeyMappings(): void {
    this.mappingService.getKeyMappings().subscribe((res) => {
      this.dataSource = res;
    });
  }


  <!-- key-mapping.component.html -->
<table mat-table [dataSource]="dataSource" class="mat-elevation-z2">

  <ng-container matColumnDef="targetTable">
    <th mat-header-cell *matHeaderCellDef> Target Table </th>
    <td mat-cell *matCellDef="let row"> {{ row.targetTable }} </td>
  </ng-container>

  <ng-container matColumnDef="sourceTable">
    <th mat-header-cell *matHeaderCellDef> Source Table </th>
    <td mat-cell *matCellDef="let row"> {{ row.sourceTable }} </td>
  </ng-container>

  <ng-container matColumnDef="targetKey">
    <th mat-header-cell *matHeaderCellDef> Target Key </th>
    <td mat-cell *matCellDef="let row"> {{ row.targetKey }} </td>
  </ng-container>

  <ng-container matColumnDef="sourceKey">
    <th mat-header-cell *matHeaderCellDef> Source Key </th>
    <td mat-cell *matCellDef="let row"> {{ row.sourceKey }} </td>
  </ng-container>

  <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
  <tr mat-row *matRowDef="let row; columns: displayedColumns"></tr>

</table>
